void rotate(int arr[], int d, int size) {
 
   int i=0,j=size-1,temp;
    for(i=0,j=size-1;i<j;i++,j--){
        temp=arr[i];
        arr[i]=arr[j];
        arr[j]=temp;
    }
    
       for(i=0,j=size-1-d;i<j;i++,j--){
           temp=arr[i];
        arr[i]=arr[j];
        arr[j]=temp;
       }
    
    for(i=size-d,j=size-1;i<j;i++,j--){
             temp=arr[i];
        arr[i]=arr[j];
        arr[j]=temp;
       }
        
        
    }
    
